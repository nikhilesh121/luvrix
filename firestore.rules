rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Blog Drafts - Admin only
    match /blogDrafts/{draftId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Blogs - Public read, admin write for publish
    match /blogs/{blogId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAdmin() || isOwner(resource.data.authorId);
      allow delete: if isAdmin();
    }

    // Users
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Manga - Public read, admin write
    match /manga/{mangaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings - Public read, admin write
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Subscribers - Admin only
    match /subscribers/{subscriberId} {
      allow read: if isAdmin();
      allow write: if true; // Allow public subscribe
    }

    // Payments - User can read own, admin can read all
    match /payments/{paymentId} {
      allow read: if isAdmin() || isOwner(resource.data.userId);
      allow write: if isAuthenticated();
    }

    // Admin Logs - Admin only
    match /adminLogs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Favorites - User can manage own favorites
    match /favorites/{favoriteId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Sitemap entries - Public read, admin write
    match /sitemap/{entryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Comments - Public read, authenticated write
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Giveaways - Public read, admin write
    match /giveaways/{giveawayId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Giveaway participants - Authenticated users
    match /giveaway_participants/{participantId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Giveaway tasks - Public read, admin write
    match /giveaway_tasks/{taskId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Notifications - User can read own
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId);
      allow write: if isAuthenticated();
    }

    // Follows - Authenticated users
    match /follows/{followId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Blog likes - Authenticated users
    match /blogLikes/{likeId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Blog views - Public write for analytics
    match /blogViews/{viewId} {
      allow read: if isAdmin();
      allow write: if true;
    }

    // Libraries - User can manage own
    match /libraries/{libraryId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Analytics collections - Admin only
    match /pageviews/{docId} {
      allow read: if isAdmin();
      allow write: if true;
    }

    match /visitors/{docId} {
      allow read: if isAdmin();
      allow write: if true;
    }

    match /daily_views/{docId} {
      allow read: if isAdmin();
      allow write: if true;
    }

    match /site_stats/{docId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    match /watchtime/{docId} {
      allow read: if isAdmin();
      allow write: if true;
    }
  }
}
